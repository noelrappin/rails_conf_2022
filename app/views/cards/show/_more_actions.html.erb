<div class="mx-10">
  <div class="flex flex-col">
    <div class="flex flex-row justify-between space-x-4">
      <% if previous_label(card.status) %>
        <%= button_to(
              previous_label(card.status),
              card_advance_path(id: card.id),
              method: :delete,
              class: "#{new_button_class} retreat"
            ) %>
      <% end %>
      <div>
        <%= image_tag(
              "trash.svg",
              size: "25x25",
              class: "min-h-[25px] min-w-[25px]"
            ) %>
      </div>
    </div>
  </div>
</div>
